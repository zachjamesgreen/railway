<%= form_for @resource do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :snippet %>
  <%= f.input :content, id: 'editor' %>
  <%= f.submit %>
<% end %>
<!-- , data: {provide: 'markdown'} -->
<script>
  var ed = $("#editor").markdown({
    autofocus:false,
    savable:false,
    resize:'vertical'
  })
</script>
