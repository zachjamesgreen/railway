<%= form_for @resource do |f| %>
  <%= f.input :title, id: 'title' %>
  <%= f.input :author %>
  <%= f.input :snippet %>
  <%= f.input :slug, id: 'slug' %>
  <%= f.input :content, id: 'editor' %>
  <%= f.submit %>
<% end %>
<script>
  var ed = $("#editor").markdown({
    autofocus:false,
    savable:false,
    resize:'vertical'
  })

  setTimeout(function(){}, 500)

  var titleToSlug = function() {
    var title = $('#title').val();
    var slug = title.replace(/ /g, '-').toLowerCase()
    $('#slug').val(slug)

  }

  $('#title').keyup(titleToSlug)

</script>
